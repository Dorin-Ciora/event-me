{
  "name": "event-me-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "format:test": "prettier --list-different \"./projects/**/*.{ts,html,scss,json}\"",
    "format:write": "prettier --write \"./projects/**/*.{ts,html,scss,json}\"",
    "analyze": "ng build --stats-json --output-hashing=none --named-chunks && esbuild-visualizer --template treemap --metadata dist/event-me/stats.json --filename dist/event-me/analyse/index.html  && http-server -o -c-1 ./dist/event-me/analyse/",
    "analyze:sme": "ng build --source-map --output-hashing=none --named-chunks && source-map-explorer dist/event-me/browser/*.js --html dist/event-me/sme/index.html && http-server -o -c-1 ./dist/event-me/sme/",
    "analyze:deps": "npm-run-all analyze:deps:*",
    "analyze:deps:all": "madge projects/event-me/src/main.ts --ts-config tsconfig.json --image ./deps/event-me/_all.png",
    "analyze:deps:ui": "madge  --extensions ts --ts-config tsconfig.json --image ./deps/event-me/ui.png projects/event-me/src/app/ui/",
    "analyze:deps:pattern": "madge  --extensions ts --ts-config tsconfig.json --image ./deps/event-me/pattern.png projects/event-me/src/app/pattern/",
    "analyze:deps:feature": "madge  --extensions ts --ts-config tsconfig.json --image ./deps/event-me/feature.png projects/event-me/src/app/feature/",
    "analyze:deps:layout": "madge  --extensions ts --ts-config tsconfig.json --image ./deps/event-me/layout.png projects/event-me/src/app/layout/",
    "analyze:deps:core": "madge  --extensions ts --ts-config tsconfig.json --image ./deps/event-me/core.png projects/event-me/src/app/core/",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.16",
    "@angular/common": "^20.3.16",
    "@angular/compiler": "^20.3.16",
    "@angular/core": "^20.3.16",
    "@angular/forms": "^20.3.16",
    "@angular/platform-browser": "^20.3.16",
    "@angular/platform-browser-dynamic": "^20.3.16",
    "@angular/router": "^20.3.16",
    "@primeng/themes": "^19.1.4",
    "firebase": "^11.4.0",
    "primeicons": "^7.0.0",
    "primeng": "^19.1.4",
    "rxjs": "~7.8.0",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.14",
    "@angular/cli": "^20.3.14",
    "@angular/compiler-cli": "^20.3.16",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "angular-eslint": "^20.7.0",
    "autoprefixer": "^10.4.23",
    "esbuild-visualizer": "^0.7.0",
    "eslint": "^9.16.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-boundaries": "^5.0.1",
    "http-server": "^14.1.1",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "madge": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "source-map-explorer": "^2.5.3",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.6.3"
  }
}