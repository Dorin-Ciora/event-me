{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "printWidth": 80,
  "endOfLine": "auto",
  "overrides": [
    {
      "files": ["*.html", "*.scss"],
      "options": {
        "tabWidth": 4,
        "printWidth": 120
      }
    },
    {
      "files": "*.html",
      "options": {
        "trailingComma": "none"
      }
    }
  ]
}
